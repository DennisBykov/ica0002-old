apiVersion: 1
datasources:
  - name: Prometheus
    type: prometheus
    access: proxy
    orgId: 1
{% for vm in groups['prometheus'] %}
    url: http://{{vm}}:9090/prometheus
{% endfor %}
    isDefault: true
    editable: false
  
  - name: InfluxDB-telegraf
    type: influxdb
    access: proxy
    orgId: 1
{% for vm in groups['influxdb'] %}
    url: http://{{vm}}:8086
{% endfor %}
    database: telegraf
    version: 1
    editable: false

  - name: InfluxDB-latency
    type: influxdb
    access: proxy
    orgId: 1
{% for vm in groups['influxdb'] %}
    url: http://{{vm}}:8086
{% endfor %}
    database: latency
    version: 1
    editable: false
